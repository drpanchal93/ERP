<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="erp.loginController">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: E8e8e8;">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/Panchal_Machinery_Logo.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <HBox prefHeight="100.0" style="-fx-background-color: #e8e8e8;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" maxWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: #2f5696;">
               <children>
                  <Label text="Sign In" textFill="#f15558">
                     <font>
                        <Font name="Lucida Sans Demibold" size="30.0" />
                     </font>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
                  <JFXTextField focusColor="#f15558" labelFloat="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="45.0" prefWidth="305.0" promptText="Username" style="-fx-text-fill: #ffffff; -fx-prompt-text-fill: #e8e8e8;" unFocusColor="#e8e8e8">
                     <font>
                        <Font name="Lucida Sans Demibold" size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="100.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXPasswordField focusColor="#f15558" labelFloat="true" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="45.0" prefWidth="305.0" promptText="Password" style="-fx-text-fill: #e8e8e8; -fx-prompt-text-fill: #e8e8e8;" unFocusColor="#e8e8e8">
                     <font>
                        <Font name="Lucida Sans Demibold" size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </JFXPasswordField>
                  <JFXButton fx:id="submit" buttonType="RAISED" onAction="#loginClicked" prefHeight="34.0" prefWidth="305.0" style="-fx-background-color: #f15558;" text="Submit" textFill="#e8e8e8">
                     <font>
                        <Font name="Lucida Sans Demibold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="70.0" />
                     </VBox.margin>
                  </JFXButton>
                  <Label text="Forgot Password ?" textFill="#e8e8e8">
                     <font>
                        <Font name="Lucida Sans Regular" size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #0c364f;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0" style="-fx-background-color: #e8e8e8;" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Copyright. All rights reserved," textFill="#2e3092">
                     <font>
                        <Font name="Lucida Sans Demibold" size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
